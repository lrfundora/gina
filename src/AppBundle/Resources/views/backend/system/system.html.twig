{% extends 'AppBundle::base_back.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/backend/vendor/bootstrap-file-input/bootstrap.file-input.js') }}"></script>
    <script src="{{ asset('bundles/app/backend/vendor/jquery-validation/jquery.validate.min.js') }}"></script>
    <script>
        $(function () {

            $('input[type="file"]').bootstrapFileInput();
            $('.input-group-addon').on('click', function (e) {
                e.preventDefault();
            });

            // Validate FormOffer
            $("#formOffer").validate({
                rules: {
                    'formOffer[sloganOffer]': {
                        required: true,
                        minlength: 3,
                        maxlength: 60
                    },
                    'formOffer[imgOffer]': {
                        required: false
                    }
                },
                messages: {
                    'formOffer[sloganOffer]': {
                        required: "Este campo no puede quedar vacío.",
                        minlength: jQuery.validator.format("El campo debe tener al menos {0} caracteres."),
                        maxlength: jQuery.validator.format("El campo debe tener como máximo {0} caracteres.")
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                },
                errorPlacement: function (error, element) {
                    $(element)
                            .closest("form")
                            .find("label[for='" + element.attr("id") + "']")
                            .append(error);
                },
                errorElement: "span"
            });

            // Validate FormPass
            $("#formSystem").validate({
                rules: {
                    'formSystem[name]': {
                        required: true,
                        minlength: 3,
                        maxlength: 50
                    },
                    'formSystem[slogan]': {
                        required: false,
                        maxlength: 255
                    },
                    'formSystem[publicity]': {
                        required: false,
                        maxlength: 1000
                    },
                    'formSystem[address]': {
                        required: false,
                        maxlength: 255
                    },
                    'formSystem[phone]': {
                        required: false,
                        maxlength: 255
                    },
                    'formSystem[email]': {
                        required: false,
                        email: true
                    },
                    'formSystem[owner]': {
                        required: false,
                        maxlength: 255
                    },
                    'formSystem[infoTitle]': {
                        required: true,
                        minlength: 5,
                        maxlength: 100
                    },
                    'formSystem[infoText]': {
                        required: true,
                        minlength: 5,
                        maxlength: 5000
                    }
                },
                messages: {
                    'formSystem[name]': {
                        required: "Este campo no puede quedar vacío.",
                        minlength: jQuery.validator.format("El campo debe tener al menos {0} caracteres."),
                        maxlength: jQuery.validator.format("El campo puede tener como máximo {0} caracteres.")
                    },
                    'formSystem[slogan]': {
                        maxlength: jQuery.validator.format("El campo puede tener como máximo {0} caracteres.")
                    },
                    'formSystem[publicity]': {
                        maxlength: jQuery.validator.format("El campo puede tener como máximo {0} caracteres.")
                    },
                    'formSystem[address]': {
                        maxlength: jQuery.validator.format("El campo puede tener como máximo {0} caracteres.")
                    },
                    'formSystem[phone]': {
                        maxlength: jQuery.validator.format("El campo puede tener como máximo {0} caracteres.")
                    },
                    'formSystem[email]': {
                        email: "Introduce una dirección de correo electrónico válida."
                    },
                    'formSystem[owner]': {
                        maxlength: jQuery.validator.format("El campo puede tener como máximo {0} caracteres.")
                    },
                    'formSystem[infoTitle]': {
                        required: "Este campo no puede quedar vacío.",
                        minlength: jQuery.validator.format("El campo debe tener al menos {0} caracteres."),
                        maxlength: jQuery.validator.format("El campo puede tener como máximo {0} caracteres.")
                    },
                    'formSystem[infoText]': {
                        required: "Este campo no puede quedar vacío.",
                        minlength: jQuery.validator.format("El campo debe tener al menos {0} caracteres."),
                        maxlength: jQuery.validator.format("El campo puede tener como máximo {0} caracteres.")
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                },
                errorPlacement: function (error, element) {
                    $(element)
                            .closest("form")
                            .find("label[for='" + element.attr("id") + "']")
                            .append(error);
                },
                errorElement: "span"
            });

        });

        $("#uploadLogoTop").on('click', function (e) {
            $('#formLogoTop').submit();
        });
        $("#uploadInfoImages").on('click', function (e) {
            $('#formInfoImages').submit();
        });
        $("#uploadParallax").on('click', function (e) {
            $('#formParallax').submit();
        });
        $("#uploadLogoDown").on('click', function (e) {
            $('#formLogoDown').submit();
        });

    </script>
{% endblock javascripts %}

{% block header %}
    {% include 'AppBundle:backend/design:header_bar.html.twig' %}
{% endblock header %}

{% block body %}
    <div id="wrapper">

    <!-- Breadcrumb -->
    <div class="normalheader transition animated fadeIn small-header">
        <div class="hpanel">
            <div class="panel-body">
                <a class="small-header-action" href="#">
                    <div class="clip-header">
                        <i class="fa fa-arrow-down"></i>
                    </div>
                </a>

                <div id="hbreadcrumb" class="pull-right">
                    <ol class="hbreadcrumb breadcrumb">
                        <li><a href="{{ url('_admin_index') }}">Inicio</a></li>
                        <li>
                            <span>Empresa</span>
                        </li>
                        <li class="active">
                            <span>Editar</span>
                        </li>
                    </ol>
                </div>
                <h2 class="font-light m-b-xs">
                    panel de control
                </h2>
                <small>Herramienta administrativa que permite mantener actualizada la información</small>
            </div>
        </div>
    </div>
    <!-- /Breadcrumb -->

    <!-- Table -->
    <div class="content animate-panel">
        <div class="row">
            <div class="col-lg-12">
                <div class="hpanel">
                    <div class="panel-heading font-uppercase">
                        {#<div class="panel-tools">#}
                            {#<a class="showhide"><i class="fa fa-chevron-up"></i></a>#}
                        {#</div>#}
                        Información de la empresa
                    </div>
                    <div class="panel-body">
                        <div class="hpanel">
                            <div class="panel-body">
                                <div class="">
                                    <h3 class="text-uppercase">
                                        empresa
                                    </h3>
                                </div>

                                <hr class="left-separator">

                                <div class="row">
                                    <div class="col-lg-12 animated-panel zoomIn" style="animation-delay: 0.4s;">
                                        <div class="hpanel">
                                            <ul class="nav nav-tabs">
                                                <li {{ tab=='1' ?'class="active"' :'' }}>
                                                    <a href="#tab-1" data-toggle="tab" aria-expanded="false">
                                                        <i class="fa fa-database"></i>
                                                        Información de básica
                                                    </a>
                                                </li>
                                                <li {{ tab=='2' ?'class="active"' :'' }}>
                                                    <a href="#tab-2" data-toggle="tab" aria-expanded="false">
                                                        <i class="fa fa-picture-o"></i>
                                                        Imágenes de la interface
                                                    </a>
                                                </li>
                                                <li {{ tab=='3' ?'class="active"' :'' }}>
                                                    <a href="#tab-3" data-toggle="tab" aria-expanded="true">
                                                        <i class="fa fa-gift"></i>
                                                        Datos de la oferta
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div id="tab-1" {{ tab=='1' ?'class="tab-pane active"' :'class="tab-pane"' }}>
                                                    <div class="panel-body">
                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                {% for Message in app.session.flashbag.get('sysInfo') %}
                                                                    <div class="alert alert-success">
                                                                        <i class="fa fa-smile-o"></i>
                                                                        {{ Message | raw }}
                                                                    </div>
                                                                    <br/>
                                                                {% endfor %}
                                                                <div class="row"
                                                                     style="background-color: #f1f3f6; border: 1px solid #ddd; margin: 15px 0; padding: 10px 0 10px 0;">
                                                                    {{ form_start(formSystem, {'attr':{'id':'formSystem'}}) }}
                                                                    <div class="col-sm-6">
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.name) }}
                                                                            {{ form_widget(formSystem.name) }}
                                                                        </div>
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.address) }}
                                                                            {{ form_widget(formSystem.address) }}
                                                                        </div>
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.phone) }}
                                                                            {{ form_widget(formSystem.phone) }}
                                                                        </div>
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.email) }}
                                                                            {{ form_widget(formSystem.email) }}
                                                                        </div>
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.owner) }}
                                                                            {{ form_widget(formSystem.owner) }}
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-6">
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.slogan) }}
                                                                            {{ form_widget(formSystem.slogan) }}
                                                                        </div>
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.publicity) }}
                                                                            {{ form_widget(formSystem.publicity) }}
                                                                        </div>
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.infoTitle) }}
                                                                            {{ form_widget(formSystem.infoTitle) }}
                                                                        </div>
                                                                        <div class="form-group">
                                                                            {{ form_label(formSystem.infoText) }}
                                                                            {{ form_widget(formSystem.infoText) }}
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-12">
                                                                        {{ form_widget(formSystem.update) }}
                                                                    </div>
                                                                    {{ form_end(formSystem) }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="tab-2" {{ tab=='2' ?'class="tab-pane active"' :'class="tab-pane"' }}>
                                                    <div class="panel-body">
                                                        <div class="row">
                                                            <div class="col-sm-2"></div>
                                                            <div class="col-sm-8">
                                                                {% for Message in app.session.flashbag.get('sysImages') %}
                                                                    <div class="alert alert-success">
                                                                        <i class="fa fa-smile-o"></i>
                                                                        {{ Message | raw }}
                                                                    </div>
                                                                    <br/>
                                                                {% endfor %}
                                                                {% for Message in app.session.flashbag.get('sysImagesError') %}
                                                                    <div class="alert alert-danger">
                                                                        <i class="fa fa-frown-o"></i>
                                                                        {{ Message | raw }}
                                                                    </div>
                                                                    <br/>
                                                                {% endfor %}
                                                                <p class="alert alert-info">
                                                                    <i class="fa fa-exclamation-circle"></i>
                                                                    Ajustarse a las dimensiones de cada imagen garantiza
                                                                    la optima experiencia del diseño.
                                                                </p>

                                                                <div class="row"
                                                                     style="background-color: #f1f3f6; border: 1px solid #ddd; margin: 15px 0; padding: 10px 0 10px 0;">
                                                                    <div class="col-sm-12">

                                                                        <!-- Form Logo Top -->
                                                                        <img src="{{ asset(entity.logoTop.path) }}"
                                                                             class="img-thumbnail m-b center-block"
                                                                             width="30%"
                                                                             alt="">

                                                                        {{ form_start(formLogoTop, {'attr':{'id':'formLogoTop','action':path('_admin_system_upload_logotop') }}
                                                                        ) }}
                                                                        <div class="input-group bootstrap-touchspin">
                                                                            {{ form_label(formLogoTop.file) }}
                                                                            {{ form_widget(formLogoTop.file, {'attr':{'title':'Seleccione el Logo Superior (166x40)' }}
                                                                            ) }}
                                                                            <span id="uploadLogoTop"
                                                                                  class="input-group-addon bootstrap-touchspin-postfix btn btn-default">
                                                                        <i class="fa fa-upload"></i>
                                                                        Actualizar imagen
                                                                    </span>
                                                                        </div>
                                                                        {{ form_end(formLogoTop) }}
                                                                        <!-- /Form Logo Top -->

                                                                        <hr/>

                                                                        <!-- Form Info Images -->
                                                                        <div class="row">
                                                                            {% for img in entity.infoImages %}

                                                                                <div class="col-sm-3">
                                                                                    <img src="{{ asset(img.path) }}"
                                                                                         class="img-thumbnail m-b center-block"
                                                                                         width="100%"
                                                                                         alt="">

                                                                                    {% if entity.infoImages | length != 1 %}
                                                                                        <a class="btn btn-danger btn-xs center-block"
                                                                                           style="margin-top: -20px;"
                                                                                           href="{{ path('_admin_system_delete_infoimages',{'id':img.id}) }}">
                                                                                           Eliminar
                                                                                        </a>
                                                                                    {% endif %}

                                                                                    <br>
                                                                                </div>

                                                                            {% endfor %}
                                                                        </div>

                                                                        <br>

                                                                        {{ form_start(formInfoImages, {'attr':{'id':'formInfoImages','action':path('_admin_system_upload_infoimages') }}
                                                                        ) }}
                                                                        <div class="input-group bootstrap-touchspin">
                                                                            {{ form_label(formInfoImages.file) }}
                                                                            {{ form_widget(formInfoImages.file, {'attr':{'title':'Seleccione una imagen de información (550x700)' }}
                                                                            ) }}
                                                                            <span id="uploadInfoImages"
                                                                                  class="input-group-addon bootstrap-touchspin-postfix btn btn-default">
                                                                            <i class="fa fa-upload"></i>
                                                                            Agregar imagen
                                                                        </span>
                                                                        </div>
                                                                        {{ form_end(formInfoImages) }}
                                                                        <!-- /Form Info Images -->

                                                                        <hr/>

                                                                        <!-- Form Parallax -->
                                                                        <img src="{{ asset(entity.imgParallax.path) }}"
                                                                             class="img-thumbnail m-b center-block"
                                                                             width="70%"
                                                                             alt="">

                                                                        {{ form_start(formParallax, {'attr':{'id':'formParallax','action':path('_admin_system_upload_parallax') }}
                                                                        ) }}
                                                                        <div class="input-group bootstrap-touchspin">
                                                                            {{ form_label(formParallax.file) }}
                                                                            {{ form_widget(formParallax.file, {'attr':{'title':'Seleccione una imagen movible (1600x1200)' }}
                                                                            ) }}
                                                                            <span id="uploadParallax"
                                                                                  class="input-group-addon bootstrap-touchspin-postfix btn btn-default">
                                                                    <i class="fa fa-upload"></i>
                                                                    Actualizar imagen
                                                                </span>
                                                                        </div>
                                                                        {{ form_end(formParallax) }}
                                                                        <!-- /Form Parallax -->

                                                                        <hr/>

                                                                        <!-- Form Logo Down -->
                                                                        <img src="{{ asset(entity.logoDown.path) }}"
                                                                             class="img-thumbnail m-b center-block"
                                                                             width="30%"
                                                                             alt="">

                                                                        {{ form_start(formLogoDown, {'attr':{'id':'formLogoDown','action':path('_admin_system_upload_logodown') }}
                                                                        ) }}
                                                                        <div class="input-group bootstrap-touchspin">
                                                                            {{ form_label(formLogoDown.file) }}
                                                                            {{ form_widget(formLogoDown.file, {'attr':{'title':'Seleccione el Logo Inferior (450x450)' }}
                                                                            ) }}
                                                                            <span id="uploadLogoDown"
                                                                                  class="input-group-addon bootstrap-touchspin-postfix btn btn-default">
                                                                    <i class="fa fa-upload"></i>
                                                                    Actualizar imagen
                                                                </span>
                                                                        </div>
                                                                        {{ form_end(formLogoDown) }}
                                                                        <!-- /Form Logo Down -->

                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-2"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="tab-3" {{ tab=='3' ?'class="tab-pane active"' :'class="tab-pane"' }}>
                                                    <div class="panel-body">
                                                        <div class="row">
                                                            <div class="col-sm-3"></div>
                                                            <div class="col-sm-6">
                                                                {% for Message in app.session.flashbag.get('sysOffer') %}
                                                                    <div class="alert alert-success">
                                                                        <i class="fa fa-smile-o"></i>
                                                                        {{ Message | raw }}
                                                                    </div>
                                                                    <br/>
                                                                {% endfor %}
                                                                <p class="alert alert-info">
                                                                    <i class="fa fa-exclamation-circle"></i>
                                                                    Ajustarse a las dimensiones de la imagen garantiza
                                                                    la optima experiencia del diseño.
                                                                </p>

                                                                <div class="row show-grid">
                                                                    <div class="col-sm-12">
                                                                        {{ form_start(formOffer, {'attr':{'id':'formOffer'}}) }}
                                                                        <div class="form-group">
                                                                            {{ form_label(formOffer.sloganOffer) }}
                                                                            {{ form_widget(formOffer.sloganOffer) }}
                                                                        </div>
                                                                        <div class="form-group">
                                                                            {{ form_label(formOffer.imgOffer) }}
                                                                            <img src="{{ asset(entity.imgOffer.path) }}"
                                                                                 class="img-thumbnail m-b center-block"
                                                                                 width="50%"
                                                                                 alt="">
                                                                            {{ form_widget(formOffer.imgOffer.file, {'attr':{'title':'Seleccione una imagen para la oferta (400x250)'}}) }}
                                                                        </div>
                                                                        {{ form_widget(formOffer.update) }}
                                                                        {{ form_end(formOffer) }}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Table -->

        <!-- Footer -->
        {% include 'AppBundle:backend/design:footer_bar.html.twig' %}
        <!-- /Footer -->

    </div>

{% endblock body %}