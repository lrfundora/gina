{% extends 'AppBundle::base_front.html.twig' %}

{% block header %}
    {% include 'AppBundle:design:header_bar.html.twig' %}
{% endblock header %}

{% block body %}
    <div id="wrapper">

        <!-- PAGE TITLE -->
        <header id="page-title">
            <div class="container">
                <h1>Categorías</h1>
                <ul class="breadcrumb">
                    {{ wo_render_breadcrumbs() }}
                </ul>
            </div>
        </header>

        <section class="container">

            <!-- BUSINESS INFO -->
            <div class="row">
                    <div class="col-sm-3">
                        <ul class="isotope">
                            <li class="isotope-item photography">
                                <div class="item-box">
                                    <figure>
                                        <img class="img-responsive"
                                             src="{{ asset(business.imgThumb.path) }}" width="100%" height="100%"
                                             alt="">
                                    </figure>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-9">
                        <h1>{{ business.name }}</h1>

                        <h3>{{ business.slogan }}</h3>

                        <p>{{ business.name }}, {{ business.description }}</p>
                    </div>
                </div>
                <!-- /BUSINESS INFO -->

                <hr class="half-margins" /><!-- separator -->

                <!-- CATEGORIES -->
                {% for category in categories %}

                    {% if loop.first %}
                    <div class="row">
                        <div class="col-sm-4">

                    {% elseif loop.index0 is divisibleby(3) %}
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                    {% else %}
                        <div class="col-sm-4">
                            {% endif %}

                            <h5><i class="fa fa-star-o"></i> {{ category.name | upper }}</h5>

                            {% for product in category.products %}
                                <ul class="list-unstyled">
                                    <li>
                                        <ul>
                                            <li><a href="{{ url('_business_products_details', {'business': business.slug, 'id':product.id}) }}">{{ product.name }}</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            {% endfor %}

                        </div>

                    {% if loop.last %}
                        </div>
                    {% endif %}

                    {% else %}

                        <p class="fsize20">
                            No hemos encontrado ningún resultado !!!
                        </p>

                {% endfor %}
                <!-- /CATEGORIES -->

                    </div>
        </section>

    </div>
    <!-- /WRAPPER -->
{% endblock body %}

{% block footer %}
    {% include 'AppBundle:design:footer_bar.html.twig' %}
{% endblock footer %}